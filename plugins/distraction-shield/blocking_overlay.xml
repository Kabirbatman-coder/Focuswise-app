<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:gravity="center">

        <!-- Shield Icon -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_shield"
            android:tint="#10B981"
            android:layout_marginBottom="24dp" />

        <!-- Title -->
        <TextView
            android:id="@+id/blocking_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stay Focused! ðŸŽ¯"
            android:textSize="28sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Message -->
        <TextView
            android:id="@+id/blocking_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You're in a focus session right now.\n\nGo back to your task."
            android:textSize="16sp"
            android:textColor="#CCCCCC"
            android:textAlignment="center"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginBottom="32dp" />

        <!-- Current Task Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_background"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="YOUR CURRENT TASK"
                android:textSize="10sp"
                android:textColor="#00C7FC"
                android:letterSpacing="0.1"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/task_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Focus Session Active"
                android:textSize="18sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Dismiss Button (hidden in strict mode) -->
        <Button
            android:id="@+id/dismiss_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go Back to Home"
            android:textColor="#10B981"
            android:background="@drawable/outline_button_background"
            android:paddingHorizontal="32dp"
            android:paddingVertical="12dp"
            android:textAllCaps="false"
            android:textSize="14sp" />

        <!-- Strict Mode Message -->
        <TextView
            android:id="@+id/strict_mode_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Strict Mode: Complete your session to unlock"
            android:textSize="12sp"
            android:textColor="#EF4444"
            android:layout_marginTop="16dp"
            android:visibility="gone" />

    </LinearLayout>

</FrameLayout>

