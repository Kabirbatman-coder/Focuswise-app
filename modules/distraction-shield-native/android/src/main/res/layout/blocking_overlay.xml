<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#E6000000"
    android:padding="32dp">

    <!-- Icon/Emoji -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ¯"
        android:textSize="72sp"
        android:layout_marginBottom="24dp" />

    <!-- Title -->
    <TextView
        android:id="@+id/blocking_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blocking_title"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Message -->
    <TextView
        android:id="@+id/blocking_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/blocking_message"
        android:textColor="#CCCCCC"
        android:textSize="18sp"
        android:textAlignment="center"
        android:lineSpacingMultiplier="1.3"
        android:layout_marginBottom="48dp" />

    <!-- Go Back Button -->
    <Button
        android:id="@+id/btn_go_back"
        android:layout_width="280dp"
        android:layout_height="56dp"
        android:text="@string/go_back_button"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_primary"
        android:layout_marginBottom="16dp" />

    <!-- End Session Button (secondary) -->
    <Button
        android:id="@+id/btn_end_session"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:text="@string/end_session_button"
        android:textSize="14sp"
        android:textColor="#888888"
        android:background="@android:color/transparent" />

</LinearLayout>

